                                    <div class="d-flex align-items-center justify-content-center px-2"><span id="quantity"><%= product.quantity %></span></div>
                                    <button class="btn plus-btn updateCartButton" data-cartitem-id="<%= product._id %>" data-cart-quantity="1"  >+</button>
                                </div>
                                
                                  
