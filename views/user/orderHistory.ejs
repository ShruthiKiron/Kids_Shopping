<%- include('../includes/user/userHead') %>
<div style="padding-top: 50px">
  <div class="bg0 m-t-23 p-b-140">
   
    <div class="container">
      <div class="border my-2"></div>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
            <li class="breadcrumb-item active" aria-current="page">My Order</li>
        </ol>
    </nav>
        <div class="row">
          <% orderDetails.forEach(order =>{ %>
            <div class="col-12">
             <div class="d-flex align-items-top justify-content-between px-4 py-2">
                <div class="bg-white"><span class="font-weight-bold">ID:</span><%= order.orderId %></div>
                <div class=" col-md-4">
                  <div>
                    <% order.product.forEach(item => { %>
                      <span class="fs-16 text-wrap text-truncate"><%= item.productDetails.productName %>,</span>
                    <% }) %>
                  </div>
                  
                    <div class="fs-10"><%= order.orderedAt %></div>
                    <div class="fs-10"></div>
                </div>
                <div class="font-weight-bold"><%= order.orderStage %></div>
                <div ><i onclick="location.href = '/view-order/<%=order._id %>'" class='text-success bx bx-show-alt fs-22'></i></div>
                
             </div>
             <div class="border my-2"></div>
            </div>
            <% }) %>
        </div>
    </div>
  </div>
</div>
<%- include('../includes/user/userEnd') %>
